@require 'atlassian.styl'
@require 'akvariables.styl'

$sidebar_width= 314px

body
  margin: 0
  background-color: $ak-color-NA100
  color: $ak-color-LB
  padding: 20px 0px 200px
  h4, li
    transition: all 0.3s $ak-ease
  &.presentation-mode
    #content
      margin-left: 200px
    #sidebar
      left: -314px
    .quiz, .no-expand, table
      li
        margin-top: 0px
      h4
        margin-top: 30px
        &:first-child
          margin-top: 8px
    table
      > h4
        &:first-child
          margin-top: 8px

    li, h4, h2
      margin-top: 200px
      &:first-child
        margin-top: 8px

h2
  span
    padding: 0 8px
    border-radius: 3px;
    background-color: #496180
    color: #9dc4f7
    font-size: 10px
    font-weight: bold
    display: inline-block
    line-height: 19px
    transform: translateY(-3px)
    margin-right: 8px
    filter: saturate(1.5)
a
  color: $ak-color-B100
  &:hover
    color: $ak-color-B300

c
  font-family: monospace
  background: $ak-color-NA60
  padding: 2px 5px
  border-radius: 3px

p
  opacity: 0.8

img
  width: 100%

*
  box-sizing: border-box

#content
  margin-left: $sidebar_width + 200px
  margin-right: 200px
  margin: 0
  padding: 0 40px
  transition: margin-left 0.3s
  &.expand
    margin-left: 200px
    transition: margin-left 0.3s
  &.no-sidebar
    margin-left: 200px


.quote
  font-size: 28px
  font-family: georgia
  font-style: italic
  line-height: 40px
  padding: 0 48px
  margin-top: 48px
.attribution
  padding-left: 43px
  margin-bottom: 48px
  color: white
  &:before
    content: '-'

pre
  code
    transition: filter 0.2s ease-in-out
    filter: blur(0px)

pre.blur
  cursor: pointer
  code
    filter: blur(10px)

::-webkit-scrollbar
  width: 12px
  height: 10px
  background: $ak-color-NA50

  &-track
    -webkit-box-shadow: inset 0 0 2px rgba(0,0,0,1)

  &-thumb
    background-color: $ak-color-NA200

  &-corner
    background-color: $ak-color-NA50

.comment
  margin-top: 20px

.coolKids
  border: 1px solid $r300
  padding-top: 24px
  position: relative
  padding-left: 6px
  padding-right: 12px
  &:before
    content: 'COOL KIDS ONLY'
    height: 24px
    background-color: $r300
    color: $fff
    position: absolute
    top: 0
    left: 0
    width: 100%
    text-align: center
  &:after
    position: absolute
    top: -1px
    left: -24px
    width: 24px
    height: 100%
    background-color: $r300
    content: ''
    z-index: -1
    border: 1px solid $r300
    border-right: 0

h1,h2,h3
  color: white

.endpoint
  margin-bottom: 100px
h2
  margin-top: 24px
  font-weight: 100
  border-bottom: 1px solid rgba(255,255,255,0.3)
  padding-bottom: 8px
  text-transform: uppercase
  letter-spacing: 1px
  margin-bottom: 8px

h4
  font-weight: bold

.path
  color: #fff
  span
    font-weight: bold
ul
  padding-left: 20px
li
  pre[class*="language-"]
    margin-left: -2px
h3
  margin-bottom: 10px
  opacity: 0.3
  text-transform: uppercase

.param
  font-family: monospace
  font-size: 16px
  color: #fff
  span
    color: $b100

td
  > h4:first-child
    margin-top: 8px
  > ol, ul
    &:last-child
      padding-bottom: 12px
  > ul:last-child
    padding-left: 18px


.slides
  width: 100%
  position: relative
  line-height: 40px
  margin-bottom: 24px
  h4
    margin-top: 12px
    color: #fff
    display: inline-block
    padding: 4px 12px
    width:100%
    border-top: 3px solid $ak-color-Y300
  ul
    margin-bottom: 24px
    list-style: none
  li.highlight
    border-left: 6px solid $r300
    padding-left: 12px
  .halfOpacity
    opacity: 0.5
  .slide
    opacity: 1
    transform: translateY(4px)
    width: 100%
    &.textSlide
      text-align: center
      font-size: 40px
      display: flex
      align-items: center
      line-height: 50px
      justify-content: center
    .html, .pug
      border-radius: 3px
      margin-bottom: 12px
      position: relative
      padding-top: 30px
      padding-left: 12px
      padding-bottom: 18px
      &:before
        content: 'html'
        font-size: 12px
        font-family: sans-serif
        color: $purple
        display: block
        position: absolute
        text-transform: uppercase
        top: 4px
        left: 12px
    .pug
      &:before
        content: 'pug'
        color: $r300
  /*.slide.active
    opacity: 1
    transform: translateY(0px)
    transition: opacity 0.4s $swoop 0.1s, transform 0.4s $swoop 0.1s*/
  #pugvhtml
    height: 320px
    background-image: url(../images/pugvhtml.png)
    background-size: contain
    background-repeat: no-repeat
    background-position: center

.courseContent
  > ol
    > li
      margin-bottom: 40px



label.code
  display: block
  width: 100%
  height: 28px
  background-color: $ak-color-NA50
  position: relative
  font-size: 10px
  top: 9px
  padding-left: 6px
  border-radius: 4px 4px 0 0

.output.code
  background-color: $ak-color-NA50
  font-size: 12px
  color: $ak-color-N70
  padding-left: 16px
  padding-top: 10px
  &:before
    content: '-->'
    color: $ak-color-R300
  pre
    margin-bottom: 14px
    border: 1px solid $ak-color-R300
    display: inline-block
    border-radius: 7px
    line-height: 14px
    padding: 0 4px


.flex
  display: flex
  &.two-column
    align-items: stretch
    align-content: stretch
    justify-content: space-between
    .column:first-child
      margin-right: 14px
  .column
    width: 50%

.table-holder
  margin-bottom: 24px
  cursor: pointer
  width: 100%
  //margin-left: calc(-20%)
  overflow-x: auto

table
  max-width: 100%
  border-spacing: 0
  border-top: 3px solid $ak-color-Y300
  font-size: 15px
  font-weight: 300
  margin-bottom:0
  margin-top: 20px
  background-color: $ak-color-NA50
  td, th
    padding: 4px 12px
    border-bottom: 2px solid rgba(255,255,255,0.1)
  th
    text-align: left
    padding: 20px 0 20px 15px
  pre[class*="language-"]
    border: 1px solid rgba(255,255,255,0.05)
  label.code
    border: 1px solid rgba(255,255,255,0.05)
    border-bottom: 0



.twoColumn
  display: flex
  .col:first-child
    margin-right: 20px
  .col
    min-width: 50%
    margin-bottom: 20px
    margin-top: 0
    > pre[class*="language-"]:first-child
      margin-top: 0
    > h4:first-child
      margin-top: 0
    overflow-x: auto


  img.left
    width: 400px


.pop-quiz
  border-top: 3px solid $ak-color-Y300
  background-color: $ak-color-NA50
  color: white
  box-sizing: content-box
  padding: 12px
  width: calc(100% -24px)
  margin: 12px 0px

.checklist
  list-style: none
  padding: 0
  input
    margin-right: 10px


.courseContent.models
  display: flex
  width: 100%
  flex-wrap: wrap
  .endpoint
    min-width: 350px
    margin-right: 24px
    flex: 1
    margin-bottom: 24px

.apiReference.groups
  display: flex
  width: 100%
  flex-wrap: wrap
  .group
    min-width: 350px
    margin-right: 24px
    flex: 1
    margin-bottom: 24px
